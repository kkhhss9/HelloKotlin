<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtGive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="124dp"
        android:fontFamily="@font/esamanru_medium"
        android:text="건강 등록"
        android:textColor="#E19861"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHealth"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="91dp"
        android:fontFamily="@font/esamanru_medium"
        android:text="예방접종 1차 \n 대소변 잘 가림"
        android:textAlignment="center"
        android:textColor="#E19861"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDay" />

    <TextView
        android:id="@+id/txtDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="118dp"
        android:fontFamily="@font/esamanru_medium"
        android:text="4월 15일"
        android:textColor="#E19861"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGive" />

    <ImageButton
        android:id="@+id/imgBtn7"
        android:layout_width="84dp"
        android:layout_height="71dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="153dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:text="등록"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGive"
        app:srcCompat="@drawable/paw_register" />


</androidx.constraintlayout.widget.ConstraintLayout>